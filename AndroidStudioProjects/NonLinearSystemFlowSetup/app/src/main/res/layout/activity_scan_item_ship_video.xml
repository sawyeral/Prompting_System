<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.nonlinearsystemflowsetup.ScanItemShip">

    <!-- Video view for Video Prompt -->
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/scanitemship_video" />

    <!-- Text to indicate this is Scan Item Ship Video Prompt - for development and testing use only -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Scan Item in Shipping Area - Video Prompt" />

    <!-- Button to indicate No Action - Replay prompt, or Redirect to Call for Help -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="No Action"
        android:id="@+id/button_scanitemshipvideo_noarrival_callforhelp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:onClick="scanItemShipVideoNoArrival"
        />

    <!-- Button to Call for Help - Redirect to Call for Help -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Help"
        android:id="@+id/button_scanitemshipvideo_callforhelp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="48dp"
        android:onClick="scanItemShipVideoToCallForHelp"
        />

    <!-- Button to indicate correct items scanned - Redirect to Main Menu -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Correct"
        android:id="@+id/button_scanitemshipvideo_placebox"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="48dp"
        android:onClick="scanItemShipVideoToMain"
        />

</RelativeLayout>
