<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.nonlinearsystemflowsetup.NavToItem">

    <!-- Image for Photo Prompt -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/navtoitem_photo_sample"
        android:layout_marginBottom="48dp"
        />

    <!-- Text to indicate this is Nav to Ship Screen - for creation and testing use only -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Navigate to Shipping Area - Photo Prompt"
        android:fontFamily="sans-serif-light"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"/>

    <!-- Button to indicate user did not arrive - Replay prompt, or Redirect to Video Prompt -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="No Arrival"
        android:id="@+id/button_navtoshipphoto_noarrival_navtoitemvideo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:onClick="navToShipPhotoNoArrival"/>

    <!-- Button to indicated user has arrived - Redirect to Place Box -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Arrival"
        android:id="@+id/button_navtoshipphoto_arrival_placebox"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp" />

    <!-- Button to Call for Help - Redirect to Call for Help -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Help"
        android:id="@+id/button_navtoshipphoto_callforhelp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="16dp" />

</RelativeLayout>

